exec xinput set-prop "Synaptics TM3471-020" "libinput Tapping Enabled" 1
exec xinput set-prop "Synaptics TM3471-020" "libinput Natural Scrolling Enabled" 1
exec_always feh --randomize --bg-fill /home/tpalmerstudios/Pictures/Wallpapers/
exec_always --no-startup-id ~/.config/i3/polybar.sh
